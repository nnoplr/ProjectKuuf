<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/frProd"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Product Name: "
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/textName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Contoh Produk"
                android:textSize="18dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/minPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/name">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Min Player: "
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/textMinPlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="18dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/maxPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/minPlay">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Max Player: "
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/textMaxPlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:text="5"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/prodprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/maxPlay">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Price: Rp."
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/textProdPrice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="100000 "
                android:textSize="18dp"/>
        </LinearLayout>


    </RelativeLayout>

</FrameLayout>